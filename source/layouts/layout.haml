!!!
%html
  %head
    %meta{ charset: 'utf-8' }
    %meta{ content: 'IE=edge', 'http-equiv' => 'X-UA-Compatible' }
    %meta{ content: 'width=device-width, initial-scale=1', name: 'viewport' }
    %title= yield_content :title
    = stylesheet_link_tag '//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css'
  %body
    .container
      = yield
    = javascript_include_tag '//code.jquery.com/jquery-latest.min.js',
                             '//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js',
                             '//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.6.0/underscore-min.js',
                             '//cdnjs.cloudflare.com/ajax/libs/backbone.js/1.1.2/backbone-min.js'

    = yield_content :javascript
