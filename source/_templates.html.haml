%script#user-list-template{ type: 'text/template' }
  = link_to 'Add User', '#/new', class: 'btn btn-primary'
  %table.table.table-hover
    %thead
      %tr
        %th Name
        %th Email
    %tbody
      <% _.each(users, function(user) { %>
      %tr
        %td <%= user.get('name') %>
        %td <%= user.get('email') %>
      <% });%>

%script#user-form-template{ type: 'text/template' }
  %legend Add user
  = form_tag '/users', id: 'user-form' do
    .form-group
      = label_tag :name
      = text_field_tag :name, class: 'form-control', required: true
    .form-group
      = label_tag :email
      = email_field_tag :email, class: 'form-control', required: true
    = submit_tag 'Create', class: 'btn btn-primary'
