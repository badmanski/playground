!!!
%html
  %head
    %meta{ charset: 'utf-8' }
    %meta{ content: 'IE=edge', 'http-equiv' => 'X-UA-Compatible' }
    %meta{ content: 'width=device-width, initial-scale=1', name: 'viewport' }
    %title= yield_content :title
    = stylesheet_link_tag '//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css'
  %body
    .container
      = yield
    = javascript_include_tag '//code.jquery.com/jquery-latest.min.js',
                             '//cdnjs.cloudflare.com/ajax/libs/jquery.ns-autogrow/1.1.6/jquery.ns-autogrow.min.js',
                             '//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js'

    = yield_content :javascript
